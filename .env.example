# Environment Variables Template
# Copy this file to .env and fill in your values

# Database - PostgreSQL connection string
# Both must be set to the same value for compatibility
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/mapeg?schema=public"
DATABASE_URI="postgresql://postgres:YOUR_PASSWORD@localhost:5432/mapeg?schema=public"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Super Admin Credentials (used by seed script)
ADMIN_EMAIL="admin@mapeg.com"
ADMIN_PASSWORD="AdminSecure123!"

# JWT Secret (IMPORTANT: Change this in production! Min 32 characters)
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long-change-in-production"

# Email Configuration (SMTP)
# Uncomment and configure for production
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="465"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="MapEg <noreply@mapeg.com>"

# SEO & Analytics
